{
  "name": "pijulaider",
  "version": "0.0.1",
  "description": "A terminal-based AI pair programming tool for LLM-driven code editing, feature generation, bug fixing, and change management.",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "pijulaider": "dist/index.js"
  },
  "directories": {
    "test": "tests"
  },
  "scripts": {
    "test": "jest --testTimeout 2000 --detectOpenHandles",
    "start": "node dist/index.js README.md",
    "build": "esbuild src/index.js --outfile=dist/index.js --format=esm --platform=node --allow-overwrite --bundle --external:node-pty --external:react-devtools-core --external:ink --external:commander --external:node-microphone --external:cross-spawn --external:yoctocolors-cjs --external:mute-stream --external:chardet --external:external-editor"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/automenta/pijulaider.git"
  },
  "keywords": [
    "ai",
    "pijul",
    "aider",
    "llm",
    "langchain"
  ],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/automenta/pijulaider/issues"
  },
  "homepage": "https://github.com/automenta/pijulaider#readme",
  "dependencies": {
    "@babel/plugin-syntax-top-level-await": "^7.14.5",
    "@google-cloud/speech": "^7.2.0",
    "@langchain/anthropic": "^0.3.25",
    "@langchain/core": "^0.3.66",
    "@langchain/google-genai": "^0.2.16",
    "@langchain/openai": "^0.6.3",
    "apply-diff": "^1.2.5",
    "commander": "^14.0.0",
    "diff": "^8.0.2",
    "edit-file": "^0.3.0",
    "execa": "^9.6.0",
    "file-picker": "^0.1.8",
    "glob": "^11.0.3",
    "hastscript": "^7.0.0",
    "ink": "^6.1.0",
    "ink-select-input": "^6.2.0",
    "ink-testing-library": "^4.0.0",
    "ink-text-input": "^6.0.0",
    "inquirer": "^12.9.0",
    "langchain": "^0.3.30",
    "node-microphone": "^0.1.6",
    "node-pty": "^1.0.0",
    "parse-git-diff": "^0.0.19",
    "react": "^19.1.1",
    "react-syntax-highlighter": "^15.6.1"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.28.0",
    "@babel/preset-react": "^7.27.1",
    "@babel/runtime": "^7.28.2",
    "babel-jest": "^30.0.5",
    "esbuild": "^0.25.8",
    "esbuild-jest": "^0.5.0",
    "esbuild-register": "^3.6.0",
    "jest": "^30.0.5"
  },
  "resolutions": {
    "react-syntax-highlighter": "15.5.0"
  }
}
